{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react"
  },
  "include": ["decl.d.ts", "./src"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": true,
    "files": true,
    "ignore": [
      ".*scss",
      ".*ogg",
    ],
  }
}
