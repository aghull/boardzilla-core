{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react"
  },
  "include": ["./src", "decl.d.ts"],
  "ts-node": {
    "files": true,
    "ignore": [
      ".*ui/.*",
    ],
  }
}
